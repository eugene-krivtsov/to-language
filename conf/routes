# Routes
GET         /api/v1/ping                     controllers.UtilController.ping()

POST        /api/v1/user/sign-up             controllers.UserController.signUp
POST        /api/v1/user/verify/:code        controllers.UserController.verify(code:String)
POST        /api/v1/user/sign-in             controllers.UserController.signIn
GET         /api/v1/user/profile             controllers.UserController.getUserProfile

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                    controllers.Assets.versioned(file)
